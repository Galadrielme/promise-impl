{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowJs": false,
    "importHelpers": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist/src",
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "DOM",
      "ESNext",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022",
      "ES2023",
      "ES2015.Promise",
      "ES2018.Promise",
      "ES2020.Promise",
      "ES2021.Promise",
      "ESNext.Promise",
      "DOM.Iterable",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "coverage",
    "node_modules"
  ]
}