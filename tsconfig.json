{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "importHelpers": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declarationDir": "types",
    "outDir": "dist",
    "noEmit": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "DOM",
      "ESNext",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022",
      "ES2023",
      "ES2015.Promise",
      "ES2018.Promise",
      "ES2020.Promise",
      "ES2021.Promise",
      "ESNext.Promise",
      "DOM.Iterable",
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist",
    "dist",
    "coverage",
    "node_modules"
  ]
}